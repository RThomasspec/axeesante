{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-5">
		<h2 class="mb-4">Liste des Tickets</h2>

		<div class="list-group">
			{% for ticket in tickets %}
				<div class="list-group-item d-flex justify-content-between align-items-center">
					<div>
						<strong>{{ ticket.numero }}</strong>
						Nom :
						{{ ticket.patient.nom }}
						-
												Prénom :
						{{ ticket.patient.prenom }}
						-
						            						-
												Adresse :
						{{ ticket.patient.adresse }}
						---
												Statut :
						{{ ticket.statut }}
						-
												Heure d'arrivée
						{{ ticket.heureArrivee|date('H:i') }}

					</div>
					<a href="{{ path('admin_ticketdelete', {'id': ticket.id}) }}" class="btn btn-success btn-sm">Traité</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
