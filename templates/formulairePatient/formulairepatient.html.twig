{% extends 'base.html.twig' %}

{% block body %}
	<div class="container d-flex justify-content-center align-items-center min-vh-100">
		<div class="card shadow p-4" style="min-width: 300px; max-width: 600px; width: 100%;">
			<h2 class="text-center mb-4">Inscription Patient</h2>

			{{ form_start(formulairepatient) }}

			<div class="mb-3">
				<label class="form-label">Nom</label>
				<div class="input-group">
					<span class="input-group-text">
						<i class="bi bi-person-fill"></i>
					</span>
					{{ form_widget(formulairepatient.nom, {'attr': {'class': 'form-control', 'placeholder': 'Dupont'}}) }}
				</div>
				{{ form_errors(formulairepatient.nom) }}
			</div>

			<div class="mb-3">
				<label class="form-label">Pr√©nom</label>
				<div class="input-group">
					<span class="input-group-text">
						<i class="bi bi-person"></i>
					</span>
					{{ form_widget(formulairepatient.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Jean'}}) }}
				</div>
				{{ form_errors(formulairepatient.prenom) }}
			</div>

			<div class="mb-3">
				<label class="form-label">Adresse</label>
				<div class="input-group">
					<span class="input-group-text">
						<i class="bi bi-geo-alt-fill"></i>
					</span>
					{{ form_widget(formulairepatient.adresse, {'attr': {'class': 'form-control', 'placeholder': '123 rue de Paris'}}) }}
				</div>
				{{ form_errors(formulairepatient.adresse) }}
			</div>

			<div class="mb-3">
				<label class="form-label">Date de naissance</label>
				<div class="input-group">
					<span class="input-group-text">
						<i class="bi bi-calendar-date-fill"></i>
					</span>
					{{ form_widget(formulairepatient.datedenaissance, {'attr': {'class': 'form-control'}}) }}
				</div>
				{{ form_errors(formulairepatient.datedenaissance) }}
			</div>

			<div class="d-grid">
				<button type="submit" class="btn btn-success btn-lg">Envoyer</button>
			</div>

			{{ form_end(formulairepatient) }}
		</div>
	</div>
{% endblock %}
